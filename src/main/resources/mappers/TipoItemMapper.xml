<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.unisabana.dyas.sampleprj.dao.mybatis.mappers.TipoItemMapper">

    <!-- ResultMap para TipoItem -->
    <resultMap type="TipoItem" id="TipoItemResult">
        <id property="id" column="ti_id"/>
        <result property="descripcion" column="ti_descripcion"/>
    </resultMap>

    <select id="getTiposItems" resultMap="TipoItemResult">
        SELECT id as ti_id, descripcion as ti_descripcion
        FROM VI_TIPOITEM
    </select>

    <select id="getTipoItem" parameterType="map" resultMap="TipoItemResult">
        SELECT id as ti_id, descripcion as ti_descripcion
        FROM VI_TIPOITEM
        WHERE id = #{id}
    </select>

    <insert id="addTipoItem" parameterType="map">
        INSERT INTO VI_TIPOITEM(id, descripcion)
        VALUES (null, #{des})
    </insert>

</mapper>