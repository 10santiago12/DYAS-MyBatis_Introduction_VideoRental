<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    
    <properties resource="config.properties"/>

    <!-- Alias para no escribir todo el paquete en los mappers -->
    <typeAliases>
        <typeAlias alias="Cliente" type="edu.unisabana.dyas.samples.entities.Cliente"/>
        <typeAlias alias="Item" type="edu.unisabana.dyas.samples.entities.Item"/>
        <typeAlias alias="ItemRentado" type="edu.unisabana.dyas.samples.entities.ItemRentado"/>
        <typeAlias alias="TipoItem" type="edu.unisabana.dyas.samples.entities.TipoItem"/>
    </typeAliases>

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
    </environments>

    <mappers>
        <mapper resource="mappers/ClienteMapper.xml"/>
        <mapper resource="mappers/ItemMapper.xml"/>
        <mapper resource="mappers/TipoItemMapper.xml"/>
    </mappers>

</configuration>
